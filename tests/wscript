#! /usr/bin/env python
# encoding: utf-8

def configure(conf):
    pass

def build(bld):
    bld.program(
        features='cxx cxxprogram test',
        source='GSLRandomNumberGenerator_test.cpp',
        target='GSLRandomNumberGenerator_test',
        includes='..',
        lib=['gsl', 'gslcblas', 'm'],
        use='unittestmain useless CPPUNIT')

    bld.program(
        features='cxx cxxstlib',
        source='main.cpp',
        use='CPPUNIT',
        target='unittestmain')
